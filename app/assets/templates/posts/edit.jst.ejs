<h1>Edit Post <%= post.id %></h1>
<form class="edit" action="#">
	<label for="post_title">Title</label>
	<input type="text" name="post[title]" value="<%= post.escape("title") %>" id="post_title">
	<br>
	<label for="post_body">Body</label>
	<textarea name="post[body]" id="post_body" rows="10" cols="50"><%= post.escape("body") %></textarea>
	<br>
	<input type="submit" value="Submit Changes" class="edit">
</form>
<br>
<a href="#<%= post.urlRoot %>/<%= post.id %>" class="back">Back</a>